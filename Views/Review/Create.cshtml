@model mvcmusicstore.Models.Review

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Review</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="AlbumID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="AlbumID" class ="form-control" asp-items="ViewBag.AlbumID"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Contents" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Contents" class="form-control" />
                <span asp-validation-for="Contents" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ReviewerEmail" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ReviewerEmail" class="form-control" />
                <span asp-validation-for="ReviewerEmail" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
